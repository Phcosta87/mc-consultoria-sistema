    <script>
        // Inicializar √≠cones Feather
        feather.replace();

        // Fun√ß√£o de logout (ser√° conectada ao sistema principal)
        function logout() {
            if (typeof Auth !== 'undefined' && Auth.logout) {
                Auth.logout();
            } else {
                // Fallback caso o sistema principal n√£o esteja carregado
                console.log('Logout iniciado');
                alert('Logout realizado com sucesso!');
            }
        }

        // Atualizar √∫ltimo update
        function updateLastUpdate() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('pt-BR');
            document.getElementById('lastUpdate').textContent = `√öltima atualiza√ß√£o: ${timeString}`;
        }

        // Atualizar status do sistema
        function updateSystemStatus(isOnline = true) {
            const indicator = document.getElementById('systemStatusIndicator');
            const text = document.getElementById('systemStatusText');
            
            if (isOnline) {
                indicator.className = 'w-2 h-2 rounded-full status-online';
                text.textContent = 'Sistema Online';
            } else {
                indicator.className = 'w-2 h-2 rounded-full status-offline';
                text.textContent = 'Sistema Offline';
            }
        }

        // Modal de status
        function openStatusModal() {
            document.getElementById('statusModal').classList.remove('hidden');
        }

        function closeStatusModal() {
            document.getElementById('statusModal').classList.add('hidden');
        }

        // Event listeners
        document.getElementById('systemStatusIndicator').addEventListener('click', openStatusModal);
        document.getElementById('systemStatusText').addEventListener('click', openStatusModal);

        // Atualizar timestamp a cada minuto
        setInterval(updateLastUpdate, 60000);
        updateLastUpdate();

        // Simular verifica√ß√£o de status a cada 30 segundos
        setInterval(() => {
            // Aqui voc√™ pode implementar uma verifica√ß√£o real de status
            updateSystemStatus(true);
        }, 30000);

        console.log('üè† Dashboard Header Component carregado com sucesso');
    </script>
